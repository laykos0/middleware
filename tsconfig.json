{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@middleware/core": ["packages/core/dist"],
      "@middleware/express": ["packages/express/dist"],
      "@middleware/nest": ["packages/nest/dist"]
    }
  }
}