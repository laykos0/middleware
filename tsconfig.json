{
  "files": [],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/express" },
    { "path": "packages/nest" },
    { "path": "packages/koa" }
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@middleware/core": ["packages/core/dist"],
      "@middleware/express": ["packages/express/dist"],
      "@middleware/nest": ["packages/nest/dist"],
      "@middleware/koa": ["packages/koa/dist"]
    }
  }
}